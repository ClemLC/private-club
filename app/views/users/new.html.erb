<% provide(:title, 'Inscris toi !') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :first_name, "Quel est ton prénom ?" %>
      <%= f.text_field :first_name, class: 'form-control' %>

      <%= f.label :last_name, "Quel est ton prénom ?" %>
      <%= f.text_field :last_name, class: 'form-control' %>

      <%= f.label :user_email, "Quel est ton email ?" %>
      <%= f.email_field :user_email, class: 'form-control' %>

      <%= f.submit "Créer mon compte", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
